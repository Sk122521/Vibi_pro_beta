<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/xcode_img"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_alignEnd="@+id/markerText"
        android:layout_alignStart="@id/markerText"
        android:layout_marginBottom="2dp"
        android:src="@mipmap/xcode2_1" />
    <TextView
        android:id="@+id/markerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@id/xcode_img"
        android:padding="1dp"
        android:text="shshhshshshhsh"
        android:background="@color/cardview_light_background" />

    <ImageButton
        android:id="@+id/imagebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/markerText"
        android:layout_alignEnd="@+id/markerText"
        android:layout_alignStart="@id/markerText"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/map_24" />
</RelativeLayout>
